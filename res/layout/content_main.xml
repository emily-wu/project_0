<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.projectzero.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:textColor="#b8c855"
            android:layout_gravity="center_horizontal"
            android:text="My Nanodegree App List"
            android:layout_weight="1" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/button2"
            android:text="spotify streamer"
            android:layout_centerHorizontal="true"
            android:onClick="messageSpotifyStreamer"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Scores App"
            android:id="@+id/button3"
            android:layout_centerHorizontal="true"
            android:onClick="messageScoresApp"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="library app"
            android:id="@+id/button4"
            android:layout_centerHorizontal="true"
            android:onClick="messageLibraryApp"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="build it bigger"
            android:id="@+id/button5"
            android:layout_centerHorizontal="true"
            android:onClick="messageBuildItBigger"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="XYZ reader"
            android:id="@+id/button6"
            android:layout_centerHorizontal="true"
            android:onClick="messageXyzReader"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Capstone: My own app"
            android:backgroundTint="#b8c855"
            android:id="@+id/button7"
            android:layout_centerHorizontal="true"
            android:onClick="messageCapstone"
            android:layout_weight="1" />



</LinearLayout>
